<UserControl x:Class="FortnitePorting.Views.Controls.TextWithIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FortnitePorting.Views.Controls"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI">
    <StackPanel Orientation="Horizontal">
        <Image Name="IconImage" Source="{Binding ImageSource, RelativeSource={RelativeSource AncestorType=local:TextWithIcon}}" Width="{Binding IconSize, RelativeSource={RelativeSource AncestorType=local:TextWithIcon}}" Height="{Binding IconSize, RelativeSource={RelativeSource AncestorType=local:TextWithIcon}}" RenderOptions.BitmapScalingMode="Fant"/>
        <TextBlock Text="{Binding Label, RelativeSource={RelativeSource AncestorType=local:TextWithIcon}}" VerticalAlignment="Center" Margin="2,0,0,0" FontSize="{Binding LabelFontSize, RelativeSource={RelativeSource AncestorType=local:TextWithIcon}}" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush}}"/>
    </StackPanel>
</UserControl>
