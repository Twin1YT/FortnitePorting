<UserControl x:Class="FortnitePorting.Views.Controls.StyleSelectorItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             xmlns:local="clr-namespace:FortnitePorting.Views.Controls">
    <StackPanel>
        <Image Source="{Binding IconSource, RelativeSource={RelativeSource AncestorType=local:StyleSelectorItem}}" Width="48" Height="48" RenderOptions.BitmapScalingMode="HighQuality"/>
        <TextBlock Text="{Binding DisplayName, RelativeSource={RelativeSource AncestorType=local:StyleSelectorItem}}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static adonisUi:Brushes.ForegroundBrush }}"/>
    </StackPanel>
</UserControl>
